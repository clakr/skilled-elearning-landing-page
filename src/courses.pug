- const courses = [{icon: '/icon-animation.svg', heading: 'Animation', description: 'Learn the latest animation techniques to create stunning motion design and captivate your audience.'}, {icon: '/icon-design.svg', heading: 'Design', description: 'Create beautiful, usable interfaces to help shape the future of how the web looks.'}, {icon: '/icon-photography.svg', heading: 'Photography', description: 'Explore critical fundamentals like lighting, composition, and focus to capture exceptional photos.'}, {icon: '/icon-crypto.svg', heading: 'Crypto', description: 'All you need to know to get started investing in crypto. Go from beginner to advanced with this 54 hour course.'}, {icon: '/icon-business.svg', heading: 'Business', description: 'A step-by-step playbook to help you start, scale, and sustain your business without outside investment.'}]

.container--courses
  .popular Check out our most popular courses!
  each course in courses
    .course
      img.course__icon(src=course.icon, alt="")
      h3.course__heading #{course.heading}
      p.course__description #{course.description}
      button.course__cta(type="button") Get Started
